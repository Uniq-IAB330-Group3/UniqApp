<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Uniq.Views.ExtensionPage" Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Entry Placeholder="Unit Code" />
        <Entry Placeholder="Assessment Title" />
        <Entry Placeholder="Tutor Name" />
        <Label Text="Due Date" />
        <StackLayout Padding="0,-50,0,0"/>
        <DatePicker Format="D"/>
        <Editor Placeholder="Reason for Extension" />
        <Button Text="Submit"/>
    </StackLayout>
</ContentPage>
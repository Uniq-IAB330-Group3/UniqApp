<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Uniq.Views.AnnouncementsPage" Title="{Binding Title}" Shell.NavBarIsVisible="False" >

    <Grid BackgroundColor="DeepSkyBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Source="announcements.png"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Grid.Column = "1"
               HeightRequest="50"
               WidthRequest="50"/>
            <ImageButton Source="profile.png"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Grid.Column = "2"
                    HeightRequest="30"
                    WidthRequest="30"
                    BackgroundColor="Transparent"/>
            <Image Source="logo.png"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Grid.Column = "0"
                    HeightRequest="60"
                    WidthRequest="60"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <SearchBar Grid.Column="1"
                       BackgroundColor="DeepSkyBlue"
                       Placeholder="Search"
                       PlaceholderColor="White"
                       TextColor="White"
                       />
            <ImageButton Source="filter.png"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   Grid.Column = "2"
                   HeightRequest="25"
                   WidthRequest="25"
                   BackgroundColor="Transparent"/>
            <ImageButton Source="sortBy.png"
                   HorizontalOptions="End"
                   VerticalOptions="Center"
                   Grid.Column = "0"
                   HeightRequest="25"
                   WidthRequest="25"
                   BackgroundColor="Transparent"/>
        </Grid>

        <ListView Grid.Row="3" BackgroundColor="White">

        </ListView>
        
    </Grid>
</ContentPage>
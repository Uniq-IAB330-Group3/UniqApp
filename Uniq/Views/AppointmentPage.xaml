<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Uniq.Views.AppointmentPage" Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Date" />
        <StackLayout Padding="0,-50,0,0"/>
        <DatePicker Format="D"/>
        <StackLayout Padding="0,20,0,0"/>
        <Label Text="Time" />
        <StackLayout Padding="0,-50,0,0"/>
        <TimePicker/>
        <StackLayout Padding="0,20,0,0"/>
        <Editor Placeholder="Reason for Extension" AutoSize="TextChanges"/>
        <Button Text="Submit" Command="{Binding OnTapCommand}"/>
    </StackLayout>
</ContentPage>